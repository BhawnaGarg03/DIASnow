        <order>-100</order>
        <script><![CDATA[if(typeof window == 'undefined')
	pairSimToMobileNumber();

function pairSimToMobileNumber() {
	var sim_number = getSimNumber();
	current.work_notes = gs.getMessage("SIM number {0} has been paired with mobile number {1}", [sim_number,current.mobile_number]);
	current.state = sn_ind_tmt_orm.Constants.ORDER_TASK_RESOLVED;
	current.update();
	action.setRedirectURL(current);
}

function getSimNumber(){
	var grs = new GlideRecord('sn_ind_tmt_orm_order_characteristic_value');
	grs.addQuery('order_line_item', current.order_line_item);
	grs.addQuery('characteristic', sn_ind_tmt_orm.Constants.SIM_SELECTION_CHARACTERISTIC);
	grs.setLimit(1);
	grs.query();
	if (grs.next()) {
		return grs.characteristic_option_value;
	}
	return "";
}]]></script>
